<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".ZigbeeConsoleActivity$PlaceholderFragment"
              android:columnCount="3"
              android:rowCount="3"
              android:orientation="vertical"
              android:weightSum="1"
              android:background="@android:color/background_dark">

    <org.bubblecloud.zigbee.androidconsole.ui.ScrollingLogTextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/consoleOutputTextView"
        android:layout_weight="1.0"
        android:text="@string/hello_world"
        android:textColor="#22FF22">

    </org.bubblecloud.zigbee.androidconsole.ui.ScrollingLogTextView>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:id="@+id/consoleInputEditText"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_rowSpan="1"
        android:layout_gravity="center|fill"
        android:textColor="@android:color/white"
        android:enabled="true"
        android:textStyle="normal"
        android:editable="true"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:singleLine="true"
        android:inputType="text"/>

</LinearLayout>
